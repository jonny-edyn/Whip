<div class="row" style="overflow: scroll;" id="bill-progress-table" data-bill-progress='<%= bill.progress %>'>
	<h2 class="text-din text-center" style="padding-bottom:20px;">BILL PROGRESS</h2>
	<div id="bill-progress-bar">
		<table style="margin: 0 auto;">
			<tr>
				<td class="bill-progress-cell">
					<div class="text-din text-center bill-progress-title house_of_commons_div house_of_lords_div royal_assent_div">
						HOUSE&nbsp;OF&nbsp;COMMONS
					</div>
				</td>
				<td style="width:34px;"></td>
				<td class="bill-progress-cell">
					<div class="text-din text-center bill-progress-title house_of_lords_div royal_assent_div">
						HOUSE&nbsp;OF&nbsp;LORDS
					</div>
				</td>
				<td style="width:34px;"></td>
				<td class="bill-progress-cell">
					<div class="text-din text-center bill-progress-title royal_assent_div">
						ROYAL&nbsp;ASSENT
					</div>
				</td>
			</tr>
		</table>
	</div>
</div>


<div class="row bill-details">
	<div class="col-md-12 text-left text-din">
		<h2 class="text-din">MEANING</h2>
		<%= bill.meaning.html_safe %>
	</div>
</div>


<div class="row bill-details">
	<div class="col-md-12 text-left text-din">
		<h2 class="text-din">WHO DOES IT IMPACT?</h2>
		<%= bill.impact.html_safe %>
	</div>
</div>


<div class="row bill-details" style="padding-bottom:40px;">
	<div class="col-md-12 text-left text-din">
		<h2 class="text-din">POTENTIAL COSTS</h2>
		<%= bill.cost.html_safe %>
	</div>
</div>

<% if media_links.any? %>
	<div class="row bill-details" style="padding-bottom:40px;">
		<div class="col-md-12 text-left text-din">
			<h2 class="text-din">MEDIA LINKS</h2>
			<% media_links.each do |media_link| %>
				<p style="word-wrap: break-word;">- <a href="<%= media_link.web_url %>" class="" style="" target="_blank"><%= media_link.web_url %></a></p>
			<% end %>
		</div>
	</div>
<% end %>


<div class="row" style="padding-bottom:80px;">
	<div class="col-md-12 text-left  text-din">
		<h2 class="text-din" style="padding-bottom: 10px;">ISSUES</h2>
		<% issues.each do |issue| %>
			<a href="<%= issue_name_path(issue.name) %>" class="text-uppercase" style="display: inline; color:#666; border: 1px solid #a8a8a8; padding: 8px; margin-right: 23px;"><%= issue.name %></a>
		<% end %>
	</div>
</div>