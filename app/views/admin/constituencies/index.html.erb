<div class="container">
	<h4 class="text-din text-left" style="">Constituencies In Database - <%= @constituency_count %> Total</h4>
	<div class="row admin-content">
		<div class="row">
		 	<div class="col-md-12" style="padding-top: 15px;">
		 		<% if @constituencies.any? %>
					<%= paginate @constituencies %>
				<% end %>
		 	</div>
		</div>
		<div class="col-sm-9" role="main">
			<% if @constituencies.any? %>
				<ul class="list-group">
					<%= render partial: "constituency", collection: @constituencies, as: :constituency %>
				</ul>
			<% end %>
		</div>
		<%= render "admin/sidebar" %>
	</div>
</div> <!-- .container -->