<div class="container">
	<div class="row admin-content">
		<div class="col-sm-9" role="main">
			<div class="col-sm-12">
				<h2 class="text-din text-uppercase">USERS</h2>
			</div>
			<div class="col-md-12">
				<% if @users.any? %>
				<ul class="list-group">
					<% @users.each do |user| %>
						<li class="list-group-item">
						<%= user.email %>
						</li>
					<% end %>
				</ul>
				<% end %>
			</div>
		</div>
		<%= render "admins/admin_sidebar" %>
	</div>
</div><!--.container -->