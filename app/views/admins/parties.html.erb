<div class="row">
	<div class="col-md-8">
		<div class="row">
			<div class="col-md-12">
				<h2 style="margin-top: 0;">PARTIES</h2>
				<br>
			</div>
			<div class="col-md-12">
				<% if @parties.any? %>
				<% @parties.each do |party| %>
				<div class="row">
					<div class="col-md-10">
						<%= party.name.upcase %>
						<div style="display:none;" id="party_<%= party.id %>" class="edit_form">
							<%= form_for party do |f| %>
								<%= f.text_field :name %>
								<%= f.submit "Edit Party" %>
							<% end %>
						</div>
					</div>
					<div class="col-md-1"> 
						<a href="" id="<%= party.id %>" class="show_edit">EDIT</a>
					</div>
					<div class="col-md-1"> 
						<%= form_for party, method: :delete, html: {style: "display:inline;"}  do |f|%>
							<%= f.submit "DELETE", style: "background: transparent; border: none;" %>
						<% end %>
					</div>
				</div>
				<br>
				<% end %>
				<% end %>
			</div>
			<div class="col-md-12">
				<h2>Add Party</h2>
			</div>
			<div class="col-md-12">
				<%= form_for @party do |f| %>
					<%= f.text_field :name %>
					<%= f.submit "Add New Party" %>
				<% end %>
			</div>
		</div>
	</div>
	<%= render "admins/admin_sidebar" %>
</div>

<script type="text/javascript">
$('body').on('click','.show_edit',function(e){
	e.preventDefault();

	var id = $(this).attr('id');
	var fin = 'party_' + id

	$('.edit_form').css('display','none');
	$('#' + fin).fadeIn();
})
</script>