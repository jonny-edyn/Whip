<div class="row admin-content">
	<div class="col-md-9" role="main">
		<div class="row">
			<div class="col-md-12">
				<h2 class="text-din text-uppercase" style="margin-top: 0;">PARTIES</h2>
			</div>
			<div class="col-md-12">
				<% if @parties.any? %>
				<ul class="list-group">
				<% @parties.each do |party| %>
				<li class="list-group-item">
					<div class="row">
						<div class="col-sm-9">
							<%= party.name.upcase %>
							<div style="display:none;" id="party_<%= party.id %>" class="edit_form">
								<%= form_for party do |f| %>
									<div class="form-group" style="padding-top:9px;">
										<%= f.text_field :name, class:'form-control' %>
									</div>
									<%# f.submit "Edit Issue" %>
									<div class="form-group">
									<%= button_tag(type: 'submit', class: "btn btn-xs btn-primary") do %>
										<i class="fa fa-floppy-o"></i> Save Edit
									<% end %>
									</div>
								<% end %>
							</div>
						</div>
						<div class="col-sm-1"> 
							<a href="javascript:;" id="<%= party.id %>" class="show_edit btn btn-xs btn-default"><span class="glyphicon glyphicon-pencil"></span> EDIT</a>
						</div>
						<div class="col-sm-2"> 
							<%= form_for party, method: :delete, html: {style: "display:inline;"}  do |f|%>
								<%# f.submit "DELETE", style: "background: transparent; border: none;" %>
								<%= button_tag(type: 'submit', class: "btn btn-xs btn-default") do %>
									<i class="glyphicon glyphicon-trash"></i> DELETE
								<% end %>
							<% end %>
						</div>
					</div>	
				</li>
				<% end %>
				</ul>
			<% end %>
			</div>
			<div class="col-md-12">
				<h2 class="text-din text-uppercase">Add Party</h2>
			</div>
			<div class="col-md-12">
				<%= form_for @party do |f| %>
					<div class="form-group">
					<%= f.text_field :name, class: 'form-control' %>
					</div>
					<div class="form-group">
					<%# f.submit "Add New Issue" %>d
					<%= button_tag(type: 'submit', class: "btn btn-primary") do %>
						<i class="glyphicon glyphicon-plus"></i> Add New Party
					<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<%= render "admins/admin_sidebar" %>
</div>

<script type="text/javascript">
$('body').on('click','.show_edit',function(e){
	e.preventDefault();

	var id = $(this).attr('id');
	var fin = 'party_' + id

	$('.edit_form').css('display','none');
	$('#' + fin).fadeIn();
})
</script>
