<div class="row">
	<div class="col-md-8">
		<div class="row">
			<div class="col-md-12">
				<h2 style="margin-top: 0;">ISSUES</h2>
				<br>
			</div>
			<div class="col-md-12">
				<% if @issues.any? %>
				<% @issues.each do |issue| %>
				<div class="row">
					<div class="col-md-10">
						<%= issue.name %>
						<div style="display:none;" id="issue_<%= issue.id %>" class="edit_form">
							<%= form_for issue do |f| %>
								<%= f.text_field :name %>
								<%= f.submit "Edit Issue" %>
							<% end %>
						</div>
					</div>
					<div class="col-md-1"> 
						<a href="" id="<%= issue.id %>" class="show_edit">EDIT</a>
					</div>
					<div class="col-md-1"> 
						<%= form_for issue, method: :delete, html: {style: "display:inline;"}  do |f|%>
							<%= f.submit "DELETE", style: "background: transparent; border: none;" %>
						<% end %>
					</div>
				</div>	
				<br>
				<% end %>
				<% end %>
			</div>
			<div class="col-md-12">
				<h2>Add Issue</h2>
			</div>
			<div class="col-md-12">
				<%= form_for @issue do |f| %>
					<%= f.text_field :name %>
					<%= f.submit "Add New Issue" %>
				<% end %>
			</div>
		</div>
	</div>
	<%= render "admins/admin_sidebar" %>
</div>

<script type="text/javascript">
$('body').on('click','.show_edit',function(e){
	e.preventDefault();

	var id = $(this).attr('id');
	var fin = 'issue_' + id

	$('.edit_form').css('display','none');
	$('#' + fin).fadeIn();
})
</script>