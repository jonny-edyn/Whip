<div class="row">
	<div class="col-md-8">
		<div class="row">
			<div class="col-md-12">
				<h2>ISSUES</h2>
			</div>
			<div class="col-md-12">
				<% if @issues.any? %>
					<% @issues.each do |issue| %>
						<%= issue.name %><br>
					<% end %>
				<% end %>
			</div>
			<div class="col-md-12">
				<h2>Add Issue</h2>
			</div>
			<div class="col-md-12">
				<%= form_for @issue do |f| %>
					<%= f.text_field :name %>
					<%= f.submit "Add New Issue" %>
				<% end %>
			</div>
		</div>
	</div>
	<%= render "admins/admin_sidebar" %>
</div>